---
import Layout from "@layouts/Layout.astro";
import Contact from "@components/Contact.astro";
import Pricing from "@components/Pricing.astro";
import heroImage from "@images/hero.avif";

const title = "Support Us";

const tiers = [
  {
    title: "Session Sponsor",
    description: "Sponsor a session at a location for a year.",
    amount: "$5,000",
    items: ["8-16 rangatahi", "1 session location for a year"],
  },
  {
    title: "Supporter",
    description: "Sponsor a session at a location for a year.",
    amount: "$10,000",
    items: ["8-16 rangatahi", "1 session location for a year"],
  },
  {
    title: "Bronze",
    description: "Sponsor a session at a location for a year.",
    amount: "$25,000",
    items: ["8-16 rangatahi", "1 session location for a year"],
  },
  {
    title: "Silver",
    description: "Sponsor a session at a location for a year.",
    amount: "$50,000",
    items: ["8-16 rangatahi", "1 session location for a year"],
  },
  {
    title: "Gold",
    description: "Sponsor a session at a location for a year.",
    amount: "$100,000",
    items: ["8-16 rangatahi", "1 session location for a year"],
  },
  {
    title: "Diamond",
    description: "Sponsor a session at a location for a year.",
    amount: "$250,000",
    items: ["8-16 rangatahi", "1 session location for a year"],
  },
];
---

<Layout meta={{ title }}>
  <Pricing tiers={tiers} />

  <Contact
    title="Sponsor Us"
    contactImage={heroImage}
    email="sponsorship@tuhuratech.org.nz"
    phone="0211990711"
    description={[
      "Interested in sponsoring us to enable us to grow and expand our mahi?",
      "Want to donate some equipment or have some staff who can volunteer?",
    ]}
  />
</Layout>
